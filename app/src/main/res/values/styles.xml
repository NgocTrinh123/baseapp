<resources>


    <style name="ActionbarTitle">
        <item name="android:textColor">@color/title</item>
        <item name="font">@string/font_lato_bold</item>
        <item name="android:textSize">@dimen/title_size</item>
    </style>

    <style name="ActionbarMenu">
        <item name="android:textColor">@color/title</item>
        <item name="font">@string/font_lato_regular</item>
        <item name="android:textSize">@dimen/title_size</item>
    </style>

    <style name="OptionMenu">
        <item name="font">@string/font_lato_regular</item>
        <item name="android:textSize">@dimen/title_size</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="Style.Dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:textColor">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:backgroundDimAmount">0.3</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:textColorPrimary">#DD000000</item>
        <item name="android:textColorSecondary">#8A000000</item>
        <item name="android:textColorHint">#42000000</item>
    </style>

</resources>
